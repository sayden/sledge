{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "subcommand": "run",
            "problemMatcher": [
                "$rustc"
            ],
            "options": {
                "env": {
                    "RUST_LOG": "debug",
                    "FEEDB_PATH": "/home/mcastro/projects/sledge/storage"
                }
            },
            "presentation": {
                "clear": true
            }
        },
        {
            "type": "cargo",
            "subcommand": "clean",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "clean"
        },
        {
            "type": "cargo",
            "subcommand": "check",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build",
            "presentation": {
                "clear": true
            }
        },
        {
            "type": "shell",
            "command":"cargo",
            "problemMatcher": [
                "$rustc"
            ],
            "label": "cargo test",
            "presentation": {
                "clear": true
            },
            "args": [
                "test",
                "--",
                "--nocapture"
            ],
            "detail": "no capture"
        },
        {
            "type": "cargo",
            "subcommand": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        }
    ]
}